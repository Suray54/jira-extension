{
  "manifest_version": 3,
  "name": "Jira Assigned Tickets",
  "version": "1.0",
  "description": "Lists Jira tickets assigned to the logged-in user.",
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": ["*://*.atlassian.net/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "icon48.png"
    },
    "default_title": "Jira Tickets",
    "default_popup_width": 600
  }
}
